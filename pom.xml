<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>TestCodeMirror2</groupId>
	<artifactId>TestCodeMirror2</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>TestCodeMirror2</name>
	<description>Testing CodeMirror2</description>

	<!-- jstestdriver artifacts are not (yet) on maven central.
	Download from http://code.google.com/p/js-test-driver/downloads/list, and install manually
	mvn install:install-file -DgroupId=com.google.jstestdriver -DartifactId=jstestdriver -Dpackaging=jar -Dversion=1.3.4.b -Dfile=JsTestDriver-1.3.4.b.jar -DgeneratePom=true 
	mvn install:install-file -DgroupId=com.google.jstestdriver -DartifactId=coverage -Dpackaging=jar -Dversion=1.3.4.b -Dfile=coverage-1.3.4.b.jar -DgeneratePom=true 
	-->

	<dependencies>
		<dependency>
			<groupId>com.google.jstestdriver</groupId>
			<artifactId>jstestdriver</artifactId>
			<version>1.3.4.b</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.google.jstestdriver</groupId>
			<artifactId>coverage</artifactId>
			<version>1.3.4.b</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.googlecode.jstd-maven-plugin</groupId>
			<artifactId>jstd-maven-plugin</artifactId>
			<version>1.3.2.5</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<properties>
		<!-- default, see profiles below -->
		<testBrowser>${ChromePath}</testBrowser>
		<!-- set in your .ms2/settings.xml -->
		<ChromePath></ChromePath>
		<FirefoxPath></FirefoxPath>
		<InternetExplorerPath></InternetExplorerPath>
		<!-- with profile 'coverage' -->
		<GenHtmlPath></GenHtmlPath>
	</properties>

	<build>
		<testSourceDirectory>${basedir}/test</testSourceDirectory>

		<plugins>
			<plugin>
				<groupId>com.googlecode.jstd-maven-plugin</groupId>
				<artifactId>jstd-maven-plugin</artifactId>
				<version>1.3.2.5</version>
				<configuration>
					<basePath>${basedir}</basePath>
					<config>${basedir}/test/jsTestDriver.conf</config>
					<port>14224</port>
					<server>http://localhost:14224</server>
					<testOutput>${project.build.directory}/js-test-driver</testOutput>
					<tests>all</tests>
					<browser>${testBrowser}</browser>
					<captureConsole>false</captureConsole>

					<!-- <reset>true</reset> <captureConsole>true</captureConsole> <runnerMode>DEBUG</runnerMode> 
						<runnerMode>INFO</runnerMode> -->
				</configuration>
				<executions>
					<execution>
						<id>run-tests</id>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


	<profiles>
		<profile>
			<id>chrome</id>
			<properties>
				<testBrowser>${ChromePath}</testBrowser>
			</properties>
		</profile>
		<profile>
			<id>firefox</id>
			<properties>
				<testBrowser>${FirefoxPath}</testBrowser>
			</properties>
		</profile>
		<profile>
			<id>iexplorer</id>
			<properties>
				<testBrowser>${InternetExplorerPath}</testBrowser>
			</properties>
		</profile>
		<profile>
			<id>all</id>
			<properties>
				<testBrowser>${ChromePath},${FirefoxPath},${InternetExplorerPath}</testBrowser>
			</properties>
		</profile>

		<profile>
			<id>coverage</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.googlecode.jstd-maven-plugin</groupId>
						<artifactId>jstd-maven-plugin</artifactId>
						<version>1.3.2.5</version>
						<configuration>
							<basePath>${basedir}</basePath>
							<config>${basedir}/test/jsTestDriver-coverage.conf</config>
							<port>24224</port>
							<server> http://localhost:24224</server>
							<testOutput>${project.build.directory}/js-test-driver-coverage</testOutput>
							<tests>all</tests>
							<browser>${testBrowser}</browser>
							<captureConsole>false</captureConsole>
						</configuration>
						<executions>
							<execution>
								<id>run-tests</id>
								<phase>integration-test</phase>
								<goals>
									<goal>test</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>maven-replacer-plugin</artifactId>
						<version>1.4.1</version>
						<executions>
							<execution>
								<id>replace</id>
								<phase>integration-test</phase>
								<goals>
									<goal>replace</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<file>target/js-test-driver-coverage/jsTestDriver.conf-coverage.dat</file>
							<replacements>
								<replacement>
									<token>\\</token>
									<value>/</value>
								</replacement>
							</replacements>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<executions>
							<execution>
								<id>genhtml</id>
								<phase>integration-test</phase>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<executable>perl</executable>
							<workingDirectory>${project.build.directory}/js-test-driver-coverage</workingDirectory>
							<arguments>
								<argument>${GenHtmlPath}</argument>
								<argument>-o</argument>
								<argument>report</argument>
								<argument>jsTestDriver.conf-coverage.dat</argument>
							</arguments>
						</configuration>
					</plugin>

				</plugins>
			</build>
		</profile>

	</profiles>

</project>